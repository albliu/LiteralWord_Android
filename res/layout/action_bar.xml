<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="45dp" android:layout_gravity="center">
	<Button android:layout_width="45dp" android:id="@id/home_but"
		android:layout_height="45dp" android:background="@drawable/icon" />
	<TextView android:layout_width="wrap_content" android:id="@+id/title"
		android:layout_height="match_parent" android:text="LiteralWord"
		android:textSize="18dp" android:gravity="center" />
	<LinearLayout android:id="@+id/my_title_menu"
		android:layout_weight="1" android:layout_height="match_parent"
		android:layout_width="0dp" android:gravity="right" android:layout_gravity="center"
		android:orientation="horizontal">
	</LinearLayout>
</LinearLayout>